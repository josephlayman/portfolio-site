theBlue = #B6EAFF

.theBlue
	color: #B6EAFF

#bg
	position: fixed
	top: -50%
	left: -50%
	width: 200%
	height: 700px
	z-index: -1

	img
		position: absolute
		top: 0
		left: 0
		right: 0
		bottom: 0
		margin: auto
		min-width: 50%
		min-height: 50%

html
	background: #333
	color: #eee

body
	background: transparent
	color: #eee

.navWrapper
	overflow: auto
	clear: both
	list-style: none
	margin: 0
	padding: 0
	margin-top: 20px
	position: relative
	left: -50%
	float: left

	li
		float: left
		margin-right: 20px
		&:last-child
			margin-right: 0
	a
		padding: 10px 20px
		color: #eee
		font-size: 1.3em;
		border: 2px solid #eee
		border-radius: 6px
		display: block

		&:hover
			text-decoration: none
			background: rgba( 255, 255, 255, .2 )

	.active
		color: theBlue
		border-color: theBlue

h1
	font-size: 6em
	clear: both
	text-align: center
	padding-top: 120px

h2
	font-size: 3em
	clear: both
	text-align: center
	margin-top: 100px
	margin-bottom: 180px

h3
	font-size: 2.5em

p
	font-size: 1.2em

.section1
	background: #222 url(../images/bg_2.jpg) no-repeat center bottom
	overflow: hidden

.section2
	min-height: 400px

.section3
	min-height: 400px
	background: #222

.section4
	min-height: 400px







